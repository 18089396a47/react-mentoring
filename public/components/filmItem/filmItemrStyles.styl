.film-item
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-basis: 0;
  margin: 0 40px 40px 0;
  height: 390px;
  list-style: none;
  color: #3e3e3e;

  &__poster
    width: 210px;

  &__info-wrapper
    padding: 10px 5px 0;

  &__title-wrapper
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 5px;
    line-height: 22px;

  &__title-link
    text-decoration: none;
    color: inherit;

  &__title
    font-weight: bold;
    font-size: 15px;
    text-transform: uppercase;

  &__year
    font-size: 12px;
    line-height: 12px;
    padding: 1px 3px;
    border: 1px solid #3e3e3e;
    flex-shrink: 0;

  &__category
    font-size: 12px;
