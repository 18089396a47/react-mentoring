.page-header 
  background: #000;
  color: #fff;
  padding: 15px 95px 35px;
  position: relative;
  z-index: 0;

  &:before
    content: '';
    position: absolute;
    display: block;
    background: url(./pageHeaderBackground.jpg);
    background-position: 50% 0;
    opacity: 0.25;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: -1;
    
  &__link
    display: inline-block;
    color: #f45162;
    text-decoration: none;
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 50px;

  &__title
    font-size: 20px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 25px;
