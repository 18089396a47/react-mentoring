.page-header
  background: #000;
  color: #fff;
  padding-top: 10px;
  position: relative;
  z-index: 0;

  &:before
    content: '';
    position: absolute;
    display: block;
    background: url(./pageHeaderBackground.jpg);
    background-position: 50% 0;
    opacity: 0.25;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: -1;

  &__link-wrapper
    display: flex;
    justify-content: space-between;
    padding: 0 70px;

  &__link
    display: inline-block;
    color: #f45162;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 35px;
