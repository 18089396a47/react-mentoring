.page-header
  &__main-wrapper
    background: #000;
    color: #fff;
    padding: 10px 40px 25px;
    position: relative;
    z-index: 0;

    &:before
      content: '';
      position: absolute;
      display: block;
      background: url(./pageHeaderBackground.jpg);
      background-position: 50% 0;
      opacity: 0.25;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      z-index: -1;

  &__link-wrapper
    display: flex;
    justify-content: space-between;
    padding: 0 30px;

  &__search-page-button
    text-decoration: none;
    color: #f45162;
    background: #fff;
    height: 30px;
    line-height: 30px;
    width: 90px;
    text-align: center;
    font-size: 14px;
    transition: background 200ms;

    &:hover
      background: #d9d9d9;

  &__link
    display: inline-block;
    color: #f45162;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 35px;
